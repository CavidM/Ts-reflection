{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "declaration": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "lib": ["es2016", "esnext.asynciterable"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
